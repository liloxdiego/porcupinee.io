@import 'nib/vendor'
vendor-prefixes = moz webkit o ms official

$primary-color = #20805e
$secondary-color = #60d5ac

rowTitle()
	text-align center
	font-size 3em

a
	color $secondary-color

body
	background-color $primary-color

#logo
	animation-name blink
	animation-duration 20s
	animation-iteration-count infinite
	animation-timing-function step-end
	background-image url("/images/logo.png")
	background-repeat no-repeat
	background-size 100% 100%
	height 193px
	width 320px

#title
	text-align center
	font-size 7em
	color $secondary-color

#who
	h1
		rowTitle()

	background-color $secondary-color

#why
	h1
		rowTitle()

	background-color white

#contact
	h1
		rowTitle()
		color $secondary-color

	background-color $primary-color

@media only screen and (max-width: 320px) {

   body { font-size: 0.8em; }

}

@keyframes blink{
	from {background-image: url("/images/logo.png");}
	30% {background-image: url("/images/logo2.png");}
	31% {background-image: url("/images/logo.png");}
	50% {background-image: url("/images/logo2.png");}
	52% {background-image: url("/images/logo.png");}
	95% {background-image: url("/images/logo2.png");}
	96% {background-image: url("/images/logo.png");}
	to {background-image: url("/images/logo.png");}
}
